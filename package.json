{
  "name": "zenkigen-component",
  "private": true,
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint './packages/**/*.ts{,x}' && prettier --check .",
    "lint:fix": "eslint './packages/**/*.ts{,x}' --fix && prettier --write .",
    "check-filenames": "node scripts/check-filename-case.mjs",
    "lint:all": "yarn lint && yarn check-filenames",
    "type-check": "yarn workspaces foreach --all --exclude zenkigen-component run type-check",
    "build:all": "yarn workspaces foreach --all -pt --exclude zenkigen-component run build",
    "build-lib:all": "yarn workspaces foreach --all -pt --exclude zenkigen-component run build-lib",
    "publish:all": "yarn workspaces foreach --all --exclude zenkigen-component npm publish",
    "storybook": "storybook dev -p 6006 --ci",
    "create-component": "yarn workspace @zenkigen-inc/component-ui hygen generator components",
    "update-tokens": "yarn workspace @zenkigen-inc/component-config run build:tokens",
    "test": "yarn workspace @zenkigen-inc/component-ui run test",
    "test:ci": "yarn workspace @zenkigen-inc/component-ui run test:ci",
    "build-storybook": "storybook build",
    "clean": "rimraf node_modules"
  },
  "resolutions": {
    "vite": "7.1.12",
    "rollup": "4.44.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.0",
    "@babel/preset-env": "7.28.0",
    "@babel/preset-react": "7.27.1",
    "@babel/preset-typescript": "7.27.1",
    "@eslint/compat": "1.3.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.31.0",
    "@storybook/addon-a11y": "9.1.17",
    "@storybook/addon-docs": "9.1.17",
    "@storybook/addon-links": "9.1.17",
    "@storybook/addon-mcp": "0.1.8",
    "@storybook/react-vite": "9.1.17",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.4.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/babel__preset-env": "7.10.0",
    "@types/node": "20.19.30",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.2.2",
    "@typescript-eslint/eslint-plugin": "8.36.0",
    "@typescript-eslint/parser": "8.36.0",
    "@vitejs/plugin-react": "5.1.0",
    "autoprefixer": "10.4.21",
    "babel-loader": "9.2.1",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-storybook": "9.1.17",
    "eslint-plugin-tailwindcss": "3.18.0",
    "glob": "11.0.2",
    "globals": "16.3.0",
    "jsdom": "24.0.0",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "react": "19.1.2",
    "react-dom": "19.1.2",
    "rimraf": "6.0.1",
    "storybook": "9.1.17",
    "tailwindcss": "3.4.17",
    "terser": "5.43.1",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vite": "7.1.12",
    "vitest": "3.2.4"
  }
}
