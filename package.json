{
  "name": "zenkigen-component",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint './packages/**/*.ts{,x}' && prettier --check .",
    "lint:fix": "eslint './packages/**/*.ts{,x}' --fix && prettier --write .",
    "check-filenames": "node scripts/check-filename-case.mjs",
    "lint:all": "yarn lint && yarn check-filenames",
    "type-check": "yarn workspaces foreach --all --exclude zenkigen-component run type-check",
    "build:all": "yarn workspaces foreach --all -pt --exclude zenkigen-component run build",
    "build-lib:all": "yarn workspaces foreach --all -pt --exclude zenkigen-component run build-lib",
    "publish:all": "yarn workspaces foreach --all --exclude zenkigen-component npm publish",
    "storybook": "storybook dev -p 6006",
    "create-component": "yarn workspace @zenkigen-inc/component-ui hygen generator components",
    "update-tokens": "yarn workspace @zenkigen-inc/component-config run build:tokens",
    "test": "yarn workspace @zenkigen-inc/component-ui run test",
    "test:ci": "yarn workspace @zenkigen-inc/component-ui run test:ci",
    "build-storybook": "storybook build",
    "clean": "rimraf node_modules",
    "prepare": "husky"
  },
  "resolutions": {
    "vite": "7.3.1",
    "rollup": "4.59.0"
  },
  "devDependencies": {
    "@babel/core": "7.29.0",
    "@babel/preset-env": "7.29.0",
    "@babel/preset-react": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@eslint/compat": "1.4.1",
    "@eslint/eslintrc": "3.3.4",
    "@eslint/js": "9.39.3",
    "@storybook/addon-a11y": "9.1.19",
    "@storybook/addon-docs": "9.1.19",
    "@storybook/addon-links": "9.1.19",
    "@storybook/addon-mcp": "0.3.3",
    "@storybook/react-vite": "9.1.19",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/babel__preset-env": "7.10.0",
    "@types/node": "20.19.35",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.56.1",
    "@typescript-eslint/parser": "8.56.1",
    "@vitejs/plugin-react": "5.1.4",
    "autoprefixer": "10.4.27",
    "babel-loader": "9.2.1",
    "eslint": "9.39.3",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-storybook": "9.1.19",
    "eslint-plugin-tailwindcss": "3.18.2",
    "glob": "11.1.0",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jsdom": "24.1.3",
    "lint-staged": "16.3.0",
    "mockdate": "3.0.5",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "rimraf": "6.1.3",
    "storybook": "9.1.19",
    "tailwindcss": "3.4.19",
    "terser": "5.46.0",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
